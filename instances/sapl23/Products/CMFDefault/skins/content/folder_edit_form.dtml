<dtml-var standard_html_header>
 
<div class="Desktop">
 
<dtml-if message>
 <p>&dtml-message;</p>
 <hr>
</dtml-if>
 
<div class="File">
 
<h2>Edit &dtml-getId;</h2>
 
<form action="folder_edit" method="post">
<table class="FormLayout">
 
 <tr valign="top">
  <th align="right"> Title
  </th>
  <td colspan="3">
   <input type="text"
          name="title"
          value="&dtml-title;"
          size="65">
  </td>
  
 <tr valign="top">
  <th align="right"> Description
  </th>
  <td colspan="3">
   <textarea name="description:text" rows="5"
             cols="65">&dtml-Description;</textarea>
  </td>
 </tr>

 <tr valign="top">
  <td> <br> </td>
  <td>
   <input type="submit" name="change" value=" Change ">
   <input type="submit" name="change_and_view" value=" Change and View ">
  </td>
 </tr>
 
</table>
</form>
</div>
 
</div>
 
<dtml-var standard_html_footer> 
