<dtml-comment>
**************************************************************
*   Esse método exclui o texto integral da materia           *
*   e desincorpora a proposicao da materia legislativa.      *
*   Man Qi em 16/01/2004 - Ciciliati em 19/01/2004           *
**************************************************************
</dtml-comment>

<dtml-call expr="REQUEST.set('erro', 0)">
<dtml-call expr="REQUEST.set('id_texto', _.str(cod_materia)+'_texto_integral')">
<dtml-if expr="_.hasattr(sapl_documentos.materia,id_texto)">
  <dtml-try>
    <dtml-call "sapl_documentos.materia.manage_delObjects(id_texto)">
  <dtml-except>
    <dtml-call expr="REQUEST.set('erro', 1)">
  <dtml-else>
    <dtml-try>
      <dtml-call expr="zsql.proposicao_desincorporar_zsql(cod_mat_ou_doc = cod_materia)">
    <dtml-except>   
      <dtml-call expr="REQUEST.set('erro', 1)">
    </dtml-try>
  </dtml-try>
  
  <dtml-if erro>
    <dtml-let mensagem="'Ocorreu um erro ao tentar excluir o texto dessa matéria!'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  <dtml-else>
    <dtml-let mensagem="'Texto da matéria excluído com sucesso!'" sucesso="1" url="'materia_mostrar_proc?cod_materia='+cod_materia">
      <dtml-var mensagem_emitir>
    </dtml-let>
  </dtml-if>
</dtml-if>
